<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home"
    android:background="#2D3F4E"
    android:id="@+id/main">

    <RelativeLayout
        android:id="@+id/options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="To whom you want to meet ?"
                    android:textColor="@color/black"
                    android:textSize="30dp"
                    android:textStyle="bold" />

                <Button
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/round_btn"
                    android:onClick="gotoForm"
                    android:text="Person 1"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <Button
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/round_btn"
                    android:onClick="gotoForm"
                    android:text="Person 2"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <Button
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/round_btn"
                    android:onClick="gotoForm"
                    android:text="Person 3"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <Button
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/round_btn"
                    android:onClick="gotoForm"
                    android:text="Person 4"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <Button
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/round_btn"
                    android:onClick="gotoForm"
                    android:text="Person 5"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <Button
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/round_btn"
                    android:onClick="gotoForm"
                    android:text="Person 6"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <Button
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/round_btn"
                    android:onClick="gotoForm"
                    android:text="Person 7"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:background="#2D3F4E"
            app:cardCornerRadius="45dp"
            app:cardElevation="0dp">

            <ImageButton
                android:id="@+id/logoutBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fedb77"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/logout" />
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</RelativeLayout>